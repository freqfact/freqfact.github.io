---
import { Image } from 'astro:assets';
import link_logo from '../assets/logo.png'; // Adjust path based on your logo location
import background from '../assets/backgroundd.png';
---

<div class="container">
    <Image 
        id="background" 
        src={background} 
        alt="" 
        fetchpriority="high"
        style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); min-width: 100vw; min-height: 100vh; object-fit: cover; z-index: -1; filter: grayscale(100%) contrast(.2);"
    />
    <div class="links-grid">
        <header class="text-white text-2xl">THANK YOU FOR CLOCKING IN</header>
        <div class="image-container">
            <Image 
                src={link_logo} 
                alt="Frequency Factory Logo" 
                width={800} 
                height={400}
                class="header-image"
            />
        </div>
        <a href="https://bit.ly/freq006" class="link-button jump-link">
            BUY TICKETS FOR FREQ006: BLACK CARL! & LEOTRIX @ THE FRUIT - DURHAM, NC (4/26/25)
        </a>
        <a href="https://www.instagram.com/freqfact/" class="link-button">
            <i class="fab fa-instagram"></i>INSTAGRAM
        </a>
        <a href="https://www.facebook.com/freqfact" class="link-button">
            <i class="fab fa-facebook"></i>FACEBOOK
        </a>
        <a href="https://soundcloud.com/freqfact" class="link-button">
            <i class="fab fa-soundcloud"></i>SET RECORDINGS & MORE
        </a>
        <a href="https://open.spotify.com/playlist/19eABEffR7Ic77fAekO5VZ" class="link-button">
            <i class="fab fa-spotify"></i>ASSEMBLY LINE PLAYLIST
        </a>
        <a href="mailto:info@freqfact.com" class="link-button">
            <i class="fa-solid fa-envelope"></i>EMAIL US
        </a>
        <!-- <a href="https://google.com" class="link-button">SHOP MERCH</a> -->
    </div>
</div>

<style>
    #background {
        position: fixed;
        top: 0;
        left: 0;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        min-width: 1920px;
        min-height: 1080px;
        z-index: -1;
        filter: grayscale(100%) contrast(.8);
    }

    .jump-link {
        animation: slowZoom 2s ease-in-out infinite alternate;
    }

    .jump-link:hover {
        font-size: 1.2rem;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .links-grid {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        width: 100%;
        margin-bottom: 50px;
        text-align: center;
    }

    .image-container {
        width: 20%;
        margin-bottom: 2rem;
        border-radius: 0.25rem;
        overflow: hidden;
    }

    .header-image {
        width: 100%;
        height: auto;
        object-fit: cover;
        animation: slowZoom 8s ease-in-out infinite alternate;
    }

    @keyframes slowZoom {
        from {
            transform: scale(1);
        }
        to {
            transform: scale(1.1);
        }
    }

    .link-button {
        color: white;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.2s;
        font-size: 1.1rem;
        width: 100%;
        white-space: nowrap;
    }

    .link-button:hover {
        text-decoration: underline;
        text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
    }

    .link-button i {
        margin-right: 0.5rem;
    }

    @media (max-width: 768px) {
        .link-button {
            white-space: normal;
            padding: 0 1rem;
            font-size: 1rem;
        }

        .container {
            padding: 1rem;
        }

        .image-container {
            width: 40%;
        }
    }
</style>
